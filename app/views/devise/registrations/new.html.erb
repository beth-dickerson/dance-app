<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name, required: true, autofocus: true %>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name, required: true %>

    <%= f.label :email %>
    <%= f.text_field :email, required: true %>

    <%= f.label :password %>
    <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>

    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.text_field :password_confirmation, required: true %>

    <%= f.label :avatar, "Profile Pic" %>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
